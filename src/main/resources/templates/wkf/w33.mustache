{{>layout/header}}

<div class="container">
    <div class="sub-title">
        <h4>소규모치수시설물</h4>
    </div>

    <div class="textAlignCenter searchBox">
        <label for="code">시설코드(필수): </label>
        <input id="code" type="text" style="margin-left:10px;"/>

        <input id="btnSearchW33" type="button" class="btn btn-outline-info" style="margin-left:10px;" value="조회"/>
    </div>
    <div class="saveBox">
        <a id="btnSave" href="" class="btn btn-outline-success" style="margin-left:10px;" value="csv로 저장">csv로 저장</a>
    </div>
    <!--목록 출력 영역-->
    <table id="dataTable" class="table table-horizontal table-bordered">
        <thead class="thead-strong"></thead>
        <tbody id="tbody">
        {{#data}}
            <tr>
                <th>시설물명</th>
                <td>{{estnm}}</td>
            </tr>
            <tr>
                <th>시설코드</th>
                <td>{{estcd}}</td>
            </tr>
            <tr>
                <th>하천명</th>
                <td>{{rivnm}}</td>
            </tr>
            <tr>
                <th>하천등급</th>
                <td>{{rivdv}}</td>
            </tr>
            <tr>
                <th>위치</th>
                <td>{{addr}}</td>
            </tr>
            <tr>
                <th>좌우안</th>
                <td>{{estlr}}</td>
            </tr>
            <tr>
                <th>구조형식</th>
                <td>{{estdv}}</td>
            </tr>
            <tr>
                <th>구조형식 (HP×구경(㎜)×대)</th>
                <td>{{strtp}}</td>
            </tr>
            <tr>
                <th>좌표-경도</th>
                <td>{{lon}}</td>
            </tr>
            <tr>
                <th>좌표-위도</th>
                <td>{{lat}}</td>
            </tr>
            <tr>
                <th>TM(X)</th>
                <td>{{tmx}}</td>
            </tr>
            <tr>
                <th>TM(Y)</th>
                <td>{{tmy}}</td>
            </tr>
            <tr>
                <th>시설물상태</th>
                <td>{{eststs}}</td>
            </tr>
            <tr>
                <th>기타사항</th>
                <td>{{etcitm}}</td>
            </tr>
        {{/data}}
        {{^data}}
            <tr>
                <td>해당 데이터가 없습니다.</td>
            </tr>
        {{/data}}
        </tbody>
    </table>
    <div style="height: 100px;"></div>
</div>


{{>layout/footer}}