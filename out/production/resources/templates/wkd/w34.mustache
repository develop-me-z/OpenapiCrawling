{{>layout/header}}

<div class="container">
    <div class="sub-title">
        <h4>댐검색</h4>
    </div>

    <div class="textAlignCenter searchBox">
        <label for="basin"> 권역 : </label>
        <select id="basin">
            <option value="">전체</option>
            <option value="1">한강</option>
            <option value="2">낙동강</option>
            <option value="3">금강</option>
            <option value="4">섬진강</option>
            <option value="5">영산강</option>
            <option value="6">제주도</option>
        </select>

        <label for="mngorg">관할기관 : </label>
        <select id="mngorg">
            <option value="">전체</option>
            <option value="1">환경부</option>
            <option value="2">한국수자원공사</option>
            <option value="3">한국농어촌공사</option>
            <option value="9">한국수력원자력</option>
            <option value="12">기타</option>
        </select>

        <label for="obsknd">관측방법 : </label>
        <select id="obsknd">
            <option value="">전체</option>
            <option value="1">다목적</option>
            <option value="2">생공전용</option>
            <option value="3">조정지댐</option>
            <option value="4">기타</option>
        </select>
        <br><br>

        <label for="keynm">관측소명: </label>
        <input id="keynm" type="text" style="margin-left:10px;"/>

        <label for="sort">정렬방법 :</label>
        <select id="sort">
            <option value="1">관측소코드</option>
            <option value="2">관측소명</option>
        </select>


        <input id="btnSearchW34" type="button" class="btn btn-outline-info" style="margin-left:10px;" value="조회"/>
    </div>
    <div class="saveBox">
        <a id="btnSave" href="" class="btn btn-outline-success" style="margin-left:10px;" value="csv로 저장">csv로 저장</a>
    </div>
    <!--목록 출력 영역-->
    <table id="dataTable" class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>댐코드</th>
            <th>댐명</th>
            <th>권역코드</th>
            <th>표준유역코드</th>
            <th>대권역명</th>
            <th>관할기관</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#data}}
            <tr>
                <td>{{damcd}}</td>
                <td>{{damnm}}</td>
                <td>{{bbsncd}}</td>
                <td>{{sbsncd}}</td>
                <td>{{bbsnnm}}</td>
                <td>{{mggvnm}}</td>
            </tr>
        {{/data}}
        </tbody>
    </table>
    <div style="height: 100px;"></div>
</div>


{{>layout/footer}}